<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 bg-light">
    <h2><%= t('changePassword') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group row">
        <%= f.label :password, class: "col-md-3 col-form-label font-weight-bold" %>
        <div class="col-md-9">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>

      <div class="field form-group row">
        <div class="col-md-3"></div>
        <div class="col-md-9">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t('password_confirmation') %>
        </div>
      </div>

      <div class="field form-group row">
        <div class="col-md-3"></div>
        <div class="col-md-9">
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: t('current_password') %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-3"></div>
</div>
